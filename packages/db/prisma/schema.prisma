generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String?

  files File[]
}

model File {
  id String @id @default(uuid()) 
  fileName String 
  fileUrl String
  createdAt  DateTime @default(now())

  uploaderId String?
  uploader User? @relation(fields: [uploaderId], references: [id])
}